{
  "name": "Resume Extension",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "runtime"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["process.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["process.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
